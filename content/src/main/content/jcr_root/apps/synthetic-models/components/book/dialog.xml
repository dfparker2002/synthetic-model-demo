<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="cq:Dialog"
	title="Book" height="{Long}400" width="{Long}950" xtype="panel">
	<items jcr:primaryType="cq:WidgetCollection">
		<isbn 
			jcr:primaryType="cq:Widget" 
			fieldLabel="ISBN" 
			name="./isbn"
			allowBlank="{Boolean}true" 
			xtype="textfield" />
		<title 
			jcr:primaryType="cq:Widget" 
			fieldLabel="Title" 
			name="./title"
			allowBlank="{Boolean}true" 
			xtype="textfield" />
		<description 
			jcr:primaryType="cq:Widget" 
			fieldLabel="Description" 
			name="./description"
			allowBlank="{Boolean}true" 
			xtype="textfield" />
		<genre 
			jcr:primaryType="cq:Widget" 
			fieldLabel="Genre" 
			name="./genre"
			allowBlank="{Boolean}true" 
			xtype="textfield" />
		<author
			jcr:primaryType="cq:Widget" 
			fieldLabel="Author" 
			name="./author"
			allowBlank="{Boolean}true" 
			xtype="textfield" />
		<imagePath 
			jcr:primaryType="cq:Widget" 
			fieldLabel="Cover Image" 
			name="./imagePath"
			allowBlank="{Boolean}true" 
			xtype="pathfield" />
	</items>
</jcr:root>
